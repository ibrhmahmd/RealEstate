@model BusinessLayer.DTOModels.DeveloperCompanyDTO

@{
    ViewData["Title"] = "Add Developer";
    ViewData["ActionName"] = "Developer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/custom-styles.css" />
    <style>
        .custom-card-container {
            max-width: 600px;
            margin-top: 20px;
        }

        .checkbox-container {
            display: flex;
            gap: 20px;
            align-items: center;
        }
    </style>
}

@section content {

    <br />

    <div class="row justify-content-center">
        <div class="col-md-6 custom-card-container">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Add New Developer</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateDeveloper" asp-controller="Admin" method="post">

                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label">Company Name</label>
                            <input asp-for="CompanyName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="YearFounded" class="form-label">Year Founded</label>
                            <input asp-for="YearFounded" class="form-control" required />

                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required>

                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" type="number" class="form-control" required />

                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" required>

                        </div>
                        <div class="mb-3">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" required>
                        </div>

                        <button asp-action="CreateDeveloper" asp-controller="Admin" class="btn btn-success">Save Developer</button>
                        <a style="margin-left:490px" asp-action="DeveloperList" asp-controller="Admin" class="btn btn-success">
                            <i class="fas fa-rotate-back"></i> Back
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
}

@section scripts {
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>

}