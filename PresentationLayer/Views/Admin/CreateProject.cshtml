@model BusinessLayer.DTOModels.ProjectDTO

@{
    ViewData["Title"] = "Add Project";
    ViewData["ActionName"] = "Project";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/custom-styles.css" />
    <style>
        .custom-card-container {
            max-width: 600px;
            margin-top: 20px;
        }

        .checkbox-container {
            display: flex;
            gap: 20px;
            align-items: center;
        }
    </style>
}

@section content {

    <br />

    <div class="row justify-content-center">
        <div class="col-md-6 custom-card-container">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Add New Project</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateProject" asp-controller="Admin" method="post">

                        <div class="mb-3">
                            <label asp-for="ProjectName" class="form-label">Project Name</label>
                            <input asp-for="ProjectName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" required ></textarea>

                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label">Start Date</label>
                            <input asp-for="StartDate" type="date" class="form-control" required>

                        </div>

                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label">End Date</label>
                            <input asp-for="EndDate" type="date" class="form-control" required />

                        </div>
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <input asp-for="Status" class="form-control" required>

                        </div>
             


                        <button asp-action="CreateProject" asp-controller="Admin" class="btn btn-success">Save Project</button>
                        <a style="margin-left:510px" asp-action="ProjectList" asp-controller="Admin" class="btn btn-success">
                            <i class="fas fa-rotate-back"></i> Back
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
}

@section scripts {
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>

}