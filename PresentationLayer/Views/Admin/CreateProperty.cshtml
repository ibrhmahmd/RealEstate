@model BusinessLayer.DTOModels.PropertyDTO
@{
    ViewData["Title"] = "Add Prperty";
    ViewData["ActionName"] = "Property";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
@section Styles {
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/custom-styles.css" />
    <style>
        .custom-card-container {
            max-width: 400px; /* Set a custom width for the card */
            margin-top: 20px; /* Add space after the header */
        }
    </style>
}

@section content {
    <br />
   
        <!-- Add Property Card -->
     
            <div class="row justify-content-center">
                <div class="col-md-6 custom-card-container">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Add New Property</h5>
                        </div>
                        <div class="card-body">
                    <form id="addPropertyForm" enctype="multipart/form-data" asp-action="CreateProperty" asp-controller="Admin" method="post">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" id="propertyName" required>
                                </div>
                        <div class="mb-3">
                            
                            <label asp-for="PropertyPicture" class="control-label"></label>
							<div class="custom-file">
                              
								<input asp-for="PropertyPicture" class="form-control" />
                           
                                </div>
                            <span asp-validation-for="PropertyPicture" class="text-danger"></span>
                            

                        </div>
                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label"></label>
                                    <input asp-for="Location" class="form-control" id="propertyAddress" required>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" id="propertyDescription" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Area" class="form-label"></label>
                                    <input asp-for="Area" class="form-control" id="propertyArea" type="number" required>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label"></label>
                                    <input asp-for="Price" class="form-control" id="propertyPrice" type="number" required>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Type" class="form-label"></label>
                                    <select asp-for="Type" class="form-select" id="propertyType" required>
                                        <option value="Apartment">Apartment</option>
                                        <option value="House">House</option>
                                        <option value="Commercial">Commercial</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-success">Save Property</button>
                        <a style="margin-left:500px" asp-action="ListProperties" asp-controller="Admin" class="btn btn-success">
                            <i class="fas fa-rotate-back"></i> Back
                        </a>

					</form>     
		
                        </div>
                    </div>
                </div>
            </div>
   
 
    <br />
}

@section scripts {
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script>
        $(document).ready(function () {
            // Add Property Form Submission
            $('#addPropertyForm').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        window.location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred while saving the property. Please try again.');
                        console.error(error);
                    }
                });
            });
        });
    </script>
}
