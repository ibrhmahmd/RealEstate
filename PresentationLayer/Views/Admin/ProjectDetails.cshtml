@model BusinessLayer.DTOModels.ProjectDTO
@{
    ViewData["Title"] = "Project Details";
    ViewData["ActionName"] = "Project";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
@section Styles {
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/css/custom-styles.css" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
}
@section content {

    <div class="row justify-content-center">
        <div class="col-md-6 custom-card-container">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Project Details</h5>
                </div>

                <div class="card-body">

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>


                        <div class="mb-3">
                            <label asp-for="ProjectName" class="control-label"></label>
                            <input asp-for="ProjectName" class="form-control" readonly />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" readonly />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" class="form-control" readonly />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" class="form-control" readonly />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" readonly />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>


                        <br />


                        <a style="margin-left:275px; width:150px;" asp-action="ProjectList" asp-controller="Admin" class="btn btn-success">
                            <i class="fas fa-rotate-back"></i> Back
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <br />
}
@section scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}