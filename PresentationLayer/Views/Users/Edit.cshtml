@model UserEditViewModel

@{
    ViewData["Title"] = "Edit User";

    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<br />

<div class="row justify-content-center">
    <div class="col-md-8 custom-card-container">
        <div class="card shadow-sm border-0" style="border-radius: 15px;">
            <div class="card-header text-center" style="background: linear-gradient(135deg, #38d39f 0%, #32be8f 100%); border-radius: 15px 15px 0 0;">
                <h5 class="card-title mb-0 text-white">Edit User Information</h5>
            </div>
            <div class="card-body">
                <form id="editUserForm" asp-controller="Users" asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Hidden input for User ID -->
                    <input type="hidden" asp-for="Id" />

                    <!-- Name Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter user name" style="border-radius: 10px;" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Email Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" style="border-radius: 10px;" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- User Picture Field -->
                    <div class="form-group mb-3">
                        <label asp-for="UserPicture" class="control-label">User Picture</label>
                        <input asp-for="UserPicture" type="file" class="form-control" aria-label="Upload User Picture" style="border-radius: 10px;" />
                        <span asp-validation-for="UserPicture" class="text-danger"></span>
                    </div>

                    <!-- Phone Number Field -->
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" style="border-radius: 10px;" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success btn-lg" style="border-radius: 10px; background-color: #38d39f; border: none;">Save Changes</button>
                        <a style="margin-left: 20px; border-radius: 10px;" asp-action="profile" asp-controller="account" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-rotate-back"></i> Back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
