@model BusinessLayer.DTOModels.PaymentDTO

@{
    ViewData["Title"] = "Payment Details";
    ViewData["ActionName"] = "Payment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
@section Styles {
    <!-- Add your CSS styles here -->
    <link rel="stylesheet" href="~/assets/css/property-details.css">
    <style>
        .portfolio-details-slider img {
            width: 100%; /* Makes the images responsive */
            height: 400px; /* Set a fixed height for all images */
            object-fit: cover; /* Ensures images cover the area without distortion */
        }
    .card {
            border: none;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            transition: box-shadow 0.3s ease-in-out, transform 0.3s;
            margin-top: 30px;
        }

            .card:hover {
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
                transform: translateY(-5px);
            }

        .card-header {
            background-color: #38d39f;
            color: #fff;
            font-weight: bold;
            padding: 15px;
            text-align: center;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }
    </style>
}
    </style>


@section Content {

    <br />

    <!-- Page Title -->
    <div class="container">


        <div class="header-container">
            <h1 class="header-title">Payment Details</h1>

        </div> <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-9" data-aos="fade-up">
                    <div class="portfolio-details-slider swiper init-swiper">
                        <script type="application/json" class="swiper-config">
                            {
                                "loop": true,
                                "speed": 600,
                                "autoplay": {
                                    "delay": 5000
                                },
                                "slidesPerView": "auto",
                                "navigation": {
                                    "nextEl": ".swiper-button-next",
                                    "prevEl": ".swiper-button-prev"
                                },
                                "pagination": {
                                    "el": ".swiper-pagination",
                                    "type": "bullets",
                                    "clickable": true
                                }
                            }
                        </script>

                        <br />

                    </div>
                    <div style="width:1250px" class="col-lg-20" data-aos="fade-up" data-aos-delay="100">
                        <div class="card">
                            <div class="card-header">
                                <h3>Quick Summary</h3>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><strong>Property:</strong> @Model.PropertyName</li>
                                    <li class="list-group-item"><strong>Occupant:</strong> @Model.Occupantname</li>
                                    <li class="list-group-item"><strong>Payment Method:</strong> @Model.PaymentMethod</li>
                                    <li class="list-group-item"><strong>Reference Number:</strong> @Model.ReferenceNumber</li>
                                    <li class="list-group-item"><strong>Late Fee:</strong> @Model.LateFee</li>
                                    <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
                                    <li class="list-group-item"><strong>Amount :</strong> @Model.Amount</li>
                                    <li class="list-group-item"><strong>Payment Date:</strong> @Model.PaymentDate</li>
                                    <li class="list-group-item"><strong>Property Name:</strong> </li>

                                </ul>

                            </div>
                        </div>
                        <br />

                        <button class="btn btn-edit" style="margin-left:530px"
                                onclick="window.location.href='@Url.Action("GeneratePaymentPDF", "Contract", new { paymentId = Model.Id })'">
                            <i class="bi bi-download"></i> Download Invoice
                        </button>

                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>

}

@section Scripts {
        <!-- Add your JS scripts here -->
        <script src="~/assets/js/property-details.js"></script>

}
