@model IEnumerable<BusinessLayer.DTOModels.PaymentDTO>; 

@{
    ViewData["Title"] = "Review Contract Payments";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<h2>Review Contract Payments</h2>
<div class="container table-container">

    <table class="table table-hover table-bordered" id="PaymentTable">

        <table class="table table-hover table-bordered" id="paymentTable">

            <thead>
                <tr>
                    <th>Payment Date</th>
                    <th>Amount</th>
                    <th>Payment Method</th>
                    <th>Contract</th>
                </tr>
            </thead>
            <tbody id="paymentTable">
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>@payment.PaymentDate</td>
                        <td>@payment.Amount</td>
                        <td>@payment.PaymentMethod</td>
                        <td>@payment.ContractId</td>

                    </tr>
                }
            </tbody>
        </table>
    </table>
</div>

<a asp-action="Details" asp-controller="Contract" asp-route-id="@Model.FirstOrDefault()?.ContractId" class="btn btn-primary">Start Contract</a>

