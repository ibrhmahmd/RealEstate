@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Specify your layout file
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Our Services</h1>
                        <p class="mb-0">Delivering exceptional services to empower businesses and drive success in the Egyptian market and beyond. From strategic consulting to cutting-edge digital solutions, we are here to help your brand stand out.</p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li class="current">Services</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->
    <!-- Services Section -->

    <section id="services" class="services section">
        <div class="container">
            <div class="row gy-4">

                @if (User.IsInRole("User"))
                {
                    <!-- Service Item 1 -->
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-item position-relative">
                            <div class="icon">
                                <i class="bi bi-bar-chart"></i>
                            </div>
                            <a asp-action="CreateProperty" asp-controller="Users" class="stretched-link">
                                <h3>Add Your Own Property</h3>
                            </a>
                            <p>List and manage your own property with ease. Our platform enables property owners to add and showcase their properties with maximum visibility.</p>
                        </div>
                    </div><!-- End Service Item -->
                }
                <!-- Service Item 2 -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-item position-relative">
                        <div class="icon">
                            <i class="bi bi-pencil"></i>
                        </div>
                        <a asp-controller="Users"  asp-action="ListPropertiesOWNED" class="stretched-link">
                            <h3>Own & Buy</h3>
                        </a>
                        <p>Find and purchase the perfect property that suits your needs. We provide tools and resources to help you make informed decisions for ownership.</p>
                    </div>
                </div><!-- End Service Item -->
                <!-- Service Item 3 -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                    <div class="service-item position-relative">
                        <div class="icon">
                            <i class="bi bi-code"></i>
                        </div>
                        <a asp-controller="Users" asp-action="ListPropertiesLease" class="stretched-link">
                            <h3>Lease Contracts</h3>
                        </a>
                        <p>Manage all your leasing needs efficiently. Our system helps streamline the creation, tracking, and execution of lease contracts with minimal hassle.</p>
                    </div>
                </div><!-- End Service Item -->
                <!-- Service Item 4 -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                        <div class="service-item position-relative">
                            <div class="icon">
                                <i class="bi bi-people"></i>
                            </div>
                            <a href="service-details.html" class="stretched-link">
                                <h3>Manage Your Contract</h3>
                            </a>
                            <p>Administer all contract-related processes seamlessly. Our platform gives you control over contract lifecycle management, ensuring accuracy and transparency.</p>
                        </div>
                    </div>

                    <!-- End Service Item -->
                    <!-- Service Item 5 -->
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="500">
                        <div class="service-item position-relative">
                            <div class="icon">
                                <i class="bi bi-camera"></i>
                            </div>
                            <a href="service-details.html" class="stretched-link">
                                <h3>Payment Report Creation</h3>
                            </a>
                            <p>Generate detailed payment reports effortlessly. Track payments and analyze financial data with our intuitive report creation tool.</p>
                        </div>
                    </div>

                    <!-- End Service Item -->
                }

            </div>
        </div>
    </section><!-- /Services Section -->

</main>
