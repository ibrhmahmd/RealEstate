@{
    ViewData["Title"] = "About - EstateAgency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/assets/css/main.css" rel="stylesheet">
}

@section Content {
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>About Us</h1>
                        <p class="mb-0">At EstateAgency, we are dedicated to helping you find your dream property with ease. Our team of experienced professionals is committed to providing exceptional service and expert advice in the real estate market.</p>
                    </div>
                </div>
            </div>
        </div>

        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="~/Index">Home</a></li>
                    <li class="current">About Us</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->
    <!-- About Section -->
    <section id="about" class="about section">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                    <p class="who-we-are">Who We Are</p>
                    <h3>Transforming Real Estate Experiences</h3>
                    <p class="fst-italic">
                        Our mission is to make the real estate process seamless and enjoyable for all our clients. We leverage technology and local market knowledge to provide unparalleled service.
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> <span>Expert agents with deep market insights.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Comprehensive property listings tailored to your needs.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Commitment to customer satisfaction at every step.</span></li>
                    </ul>
                </div>

                <div class="col-lg-6 about-images" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">
                        <div class="col-lg-6">
                            <img src="~/assets/img/about-company-1.jpg" class="img-fluid" alt="Image of our company culture">
                        </div>
                        <div class="col-lg-6">
                            <div class="row gy-4">
                                <div class="col-lg-12">
                                    <img src="~/assets/img/about-company-2.jpg" class="img-fluid" alt="Our team working together">
                                </div>
                                <div class="col-lg-12">
                                    <img src="~/assets/img/about-company-3.jpg" class="img-fluid" alt="Client meeting at our office">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /About Section -->
    <!-- Stats Section -->
    <section id="stats" class="stats section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-emoji-smile color-blue flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="250" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Happy Clients</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-journal-richtext color-orange flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="350" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Properties Sold</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-headset color-green flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="2000" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Hours Of Support</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-people color-pink flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="20" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Expert Agents</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->
            </div>
        </div>
    </section><!-- /Stats Section -->
    <!-- Features Section -->
    <section id="features" class="features section">
        <div class="container">
            <div class="row justify-content-around gy-4">
                <div class="features-image col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <img src="~/assets/img/features-bg.jpg" alt="Features background image">
                </div>

                <div class="col-lg-5 d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="200">
                    <h3>Your Real Estate Partner</h3>
                    <p>At EstateAgency, we pride ourselves on providing personalized service that fits your unique needs. Whether buying, selling, or renting, our team is here to guide you every step of the way.</p>

                    <div class="icon-box d-flex position-relative" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-house-door flex-shrink-0"></i>
                        <div>
                            <h4><a href="#" class="stretched-link">Residential Properties</a></h4>
                            <p>Explore our vast selection of residential listings tailored to your lifestyle and preferences.</p>
                        </div>
                    </div><!-- End Icon Box -->

                    <div class="icon-box d-flex position-relative" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-building flex-shrink-0"></i>
                        <div>
                            <h4><a href="#" class="stretched-link">Commercial Properties</a></h4>
                            <p>Discover prime commercial spaces that can elevate your business presence.</p>
                        </div>
                    </div><!-- End Icon Box -->

                    <div class="icon-box d-flex position-relative" data-aos="fade-up" data-aos-delay="500">
                        <i class="bi bi-shield-lock flex-shrink-0"></i>
                        <div>
                            <h4><a href="#" class="stretched-link">Secure Transactions</a></h4>
                            <p>Your safety is our priority. We ensure secure and transparent transactions for peace of mind.</p>
                        </div>
                    </div><!-- End Icon Box -->
                </div>
            </div>
        </div>
    </section><!-- /Features Section -->
    <!-- Team Section -->
    <section id="team" class="team section-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>Our Team</h2>
                <p>Meet the talented individuals behind our success.</p>
            </div>

            <div class="row gy-4">
                <div class="col-lg-3 col-md-6">
                    <div class="team-member" data-aos="fade-up" data-aos-delay="100">
                        <div class="team-img">
                            <img src="~/assets/img/team/team-1.jpg" class="img-fluid" alt="Walter White">
                        </div>
                        <h4>Walter White</h4>
                        <span>Chief Executive Officer</span>
                        <div class="social">
                            <a href="#"><i class="bi bi-twitter"></i></a>
                            <a href="#"><i class="bi bi-facebook"></i></a>
                            <a href="#"><i class="bi bi-instagram"></i></a>
                        </div>
                    </div>
                </div><!-- End Team Member -->

                <div class="col-lg-3 col-md-6">
                    <div class="team-member" data-aos="fade-up" data-aos-delay="200">
                        <div class="team-img">
                            <img src="~/assets/img/team/team-2.jpg" class="img-fluid" alt="Jane Doe">
                        </div>
                        <h4>Jane Doe</h4>
                        <span>Chief Technology Officer</span>
                        <div class="social">
                            <a href="#"><i class="bi bi-twitter"></i></a>
                            <a href="#"><i class="bi bi-facebook"></i></a>
                            <a href="#"><i class="bi bi-instagram"></i></a>
                        </div>
                    </div>
                </div><!-- End Team Member -->

                <div class="col-lg-3 col-md-6">
                    <div class="team-member" data-aos="fade-up" data-aos-delay="300">
                        <div class="team-img">
                            <img src="~/assets/img/team/team-3.jpg" class="img-fluid" alt="John Smith">
                        </div>
                        <h4>John Smith</h4>
                        <span>Chief Marketing Officer</span>
                        <div class="social">
                            <a href="#"><i class="bi bi-twitter"></i></a>
                            <a href="#"><i class="bi bi-facebook"></i></a>
                            <a href="#"><i class="bi bi-instagram"></i></a>
                        </div>
                    </div>
                </div><!-- End Team Member -->
                <div class="col-lg-3 col-md-6">
                    <div class="member" data-aos="fade-up" data-aos-delay="400">
                        <img src="~/assets/img/team/team-4.jpeg" class="img-fluid" alt="Team member image">
                        <div class="member-info">
                            <h4>Michael Brown</h4>
                            <span>Real Estate Consultant</span>
                            <div class="social">
                                <a href="#"><i class="bi bi-twitter"></i></a>
                                <a href="#"><i class="bi bi-facebook"></i></a>
                                <a href="#"><i class="bi bi-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div><!-- End Team Member -->
            </div><!-- End Row -->
        </div>
    </section><!-- End Team Section -->
    <!-- /Team Section -->
}
