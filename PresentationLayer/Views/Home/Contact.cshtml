@model ContactFormViewModel
@{
    Layout = "_Layout"; // Reference to the layout file
}

@section Styles {
    <link href="~/assets/css/contact.css" rel="stylesheet"> <!-- Optional: Add specific styles for the contact page -->
}

@section Content {
    <main class="main">

        <!-- Page Title -->
        <div class="page-title" data-aos="fade">
            <div class="heading">
                <div class="container">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            <h1>Contact</h1>
                            <p class="mb-0">Get in touch with us for all your real estate needs. We are here to assist you in finding your dream property in Egypt.</p>
                        </div>
                    </div>
                </div>
            </div>
           
        </div><!-- End Page Title -->
        <!-- Contact Section -->
        <section id="contact" class="contact section">
            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="mb-4" data-aos="fade-up" data-aos-delay="200">
                    <iframe style="border:0; width: 100%; height: 270px;"
                            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d48389.78314118045!2d31.2357!3d30.0444!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x145847d4b9e9c0f7%3A0x69b4f9e63c5175f6!2sCairo%20Egypt!5e0!3m2!1sen!2sus!4v1676961268712!5m2!1sen!2sus"
                            frameborder="0"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div><!-- End Google Maps -->

                <div class="row gy-4">

                    <div class="col-lg-4">
                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                            <i class="bi bi-geo-alt flex-shrink-0"></i>
                            <div>
                                <h3>Address</h3>
                                <p>123 Nile Street, Cairo, Egypt</p>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                            <i class="bi bi-telephone flex-shrink-0"></i>
                            <div>
                                <h3>Call Us</h3>
                                <p>+20 123 456 7890</p>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="500">
                            <i class="bi bi-envelope flex-shrink-0"></i>
                            <div>
                                <h3>Email Us</h3>
                                <p>info@estateagency.com</p>
                            </div>
                        </div><!-- End Info Item -->

                    </div>

                    <div class="col-lg-8">
                        <form asp-action="Contact" asp-controller="Home" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                            <div class="row gy-4">
                                <div class="col-md-6">
                                    <input asp-for="Name" class="form-control" placeholder="Your Name" required />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Email" class="form-control" placeholder="Your Email" required />
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="To" class="form-control" placeholder="To" readonly />
                                </div>
                                <div class="col-md-12">
                                    <input asp-for="Subject" class="form-control" placeholder="Subject" required />
                                </div>
                                <div class="col-md-12">
                                    <textarea asp-for="Message" class="form-control" rows="6" placeholder="Message" required></textarea>
                                </div>

                                <div class="col-md-12 text-center">
                                    <div class="loading">Loading</div>
                                    <div class="error-message">@Html.ValidationSummary("", new { @class = "text-danger" })</div>
                                    <div class="sent-message">@TempData["SuccessMessage"]</div>
                                    <button type="submit">Send Message</button>
                                </div>
                            </div>
                        </form>


                    </div><!-- End Contact Form -->

                </div>

            </div>

        </section><!-- /Contact Section -->

    </main>
}

@section Scripts {
    <script src="~/assets/js/contact.js"></script> <!-- Optional: Add specific scripts for the contact page -->
}
