@model List<BusinessLayer.DTOModels.PropertyDTO>

@{
    Layout = "_Layout";
}

@section Styles {
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" />
    <link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <link href="~/assets/css/main.css" rel="stylesheet" />
}

@section Content {
    <main class="main">
        <!-- Page Title -->
        
        <div class="page-title" data-aos="fade">
            <div class="heading">
                <div class="container">
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            <h1>Properties</h1>
                            <p class="mb-0"></p>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="breadcrumbs">
                <div class="container">
                    <ol>
                        <li><a href="~/index.html">Home</a></li>
                        <li class="current">Properties</li>
                    </ol>
                </div>
            </nav>
        </div><!-- End Page Title -->
        <!-- Search and Filters -->
        <div class="search-box container my-4">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <form method="get" action="">
                        <div class="input-group mb-3">
                            <!-- Search Box -->
                            <input type="text" class="form-control form-control-lg" placeholder="Search for properties..." name="searchTerm" style="flex: 2;" />
                            <!-- Dropdown for Location -->
                            <select class="form-select mx-3" name="location">
                                <option value="">Location</option>
                                <option value="Location 1">Location 1</option>
                                <option value="Location 2">Location 2</option>
                                <option value="Location 3">Location 3</option>
                            </select>
                            <!-- Dropdown for Type Type -->
                            <select class="form-select mx-3" name="Type">
                                <option value="">Type</option>
                                <option value="Apartment">Apartment</option>
                                <option value="House"> House</option>
                                <option value="Commercial">Commercial</option>
                            </select>

                            <!-- Radio Buttons for Status -->
                            <div class="d-flex align-items-center mx-3">
                                <div class="form-check me-2">
                                    <input class="form-check-input" type="radio" name="status" value="All" id="statusAll" checked>
                                    <label class="form-check-label" for="statusAll">All</label>
                                </div>
                                <div class="form-check me-2">
                                    <input class="form-check-input" type="radio" name="status" value="For Sale" id="statusSale">
                                    <label class="form-check-label" for="statusSale">Sale</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="status" value="For Rent" id="statusRent">
                                    <label class="form-check-label" for="statusRent">Rent</label>
                                </div>
                            </div>

                            <!-- Search Button -->
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- Real Estate Section -->
        <section id="real-estate" class="real-estate section">
            <div class="container">
                <div class="row gy-4">
                    <!-- Check if there are any properties -->
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var property in Model)
                        {
                            <div class="col-xl-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                                <div class="card">
                                    <!-- Placeholder image, will be replaced by actual property image in the future -->
                                    <img src="~/assets/img/properties/property-1.jpg" alt="Property Image" class="img-fluid" />
                                    <div class="card-body">
                                        <span class="sale-rent">@property.Type | @property.Status</span>
                                        <h3>
                                            <!-- Redirect to GetPropertyById action in PropertiesController -->
                                            <a href="@Url.Action("Details", "Properties", new { id = property.ID })" class="stretched-link">@property.Name</a>
                                        </h3>
                                        <div class="card-content d-flex flex-column justify-content-center text-center">
                                            <div class="row property-info">
                                                <div class="col">Type</div>
                                                <div class="col">Area</div>
                                                <div class="col">Location</div>
                                            </div>
                                            <div class="row">
                                                <div class="col">@property.Type</div>
                                                <div class="col">@property.Area</div>
                                                <div class="col">@property.Location</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col text-center">
                            <p>No properties found.</p>
                        </div>
                    }
                </div>
            </div>
        </section><!-- End Real Estate Section -->

    </main><!-- End Main -->
}

@section Scripts {
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>
}
