@model IEnumerable<Property>
<h2>Property List</h2>

<a href="@Url.Action("Create", "Property")" class="btn btn-primary mb-2">Add New Property</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Area (sq ft)</th>
            <th>Price ($)</th>
            <th>Property Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.Name</td>
                <td>@property.Address</td>
                <td>@property.Area</td>
                <td>@property.Price</td>
                <td>@property.PropertyType</td>
                <td>
                    <a href="@Url.Action("Edit", "Property", new { id = property.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Property", new { id = property.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
