@model IEnumerable<BusinessLayer.DTOModels.PropertyDTO>

<div class="container mt-5">
    <h2>Property Management</h2>

    <a class="btn btn-primary" href="@Url.Action("Create", "Property")">Add New Property</a>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Area</th>
                <th>Price</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model)
            {
                <tr>
                    <td>@property.Name</td>
                    <td>@property.AddressID</td>
                    <td>@property.Area</td>
                    <td>@property.Price</td>
                    <td>@property.Type</td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "Property", new { id = property.ID })">Edit</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@property.ID" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
