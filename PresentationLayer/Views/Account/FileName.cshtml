@model PresentationLayer.Models.UserEditViewModel
@{
    ViewData["Title"] = "User Profile Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Nunito', sans-serif; }
        .sidebar { width: 80px; height: 100vh; position: fixed; left: 0; top: 0; }
        .sidebar-icon { width: 50px; height: 50px; margin: 10px auto; }
        .custom-green { background-color: rgb(46,202,106); }
    </style>
</head>
<body class="bg-gray-100">

    <div class="flex min-h-screen">
        <br />
        <br />
        <br />
        <br />
        <!-- Sidebar -->
        <aside class="sidebar bg-white shadow-lg p-4 flex flex-col justify-start items-center">
            <a href="#" class="sidebar-icon bg-gray-200 rounded-full flex justify-center items-center mb-4">
                <img src="https://img.icons8.com/ios-glyphs/30/000000/home.png" alt="Home" />
            </a>
            <a href="#" class="sidebar-icon bg-gray-200 rounded-full flex justify-center items-center mb-4">
                <img src="https://img.icons8.com/ios-glyphs/30/000000/user.png" alt="User" />
            </a>
            <a href="#" class="sidebar-icon bg-gray-200 rounded-full flex justify-center items-center mb-4">
                <img src="https://img.icons8.com/ios-glyphs/30/000000/chat.png" alt="Chat" />
            </a>
            <a href="#" class="sidebar-icon bg-gray-200 rounded-full flex justify-center items-center">
                <img src="https://img.icons8.com/ios-glyphs/30/000000/settings.png" alt="Settings" />
            </a>
        </aside>

        <!-- Main Content Area -->
        <div class="flex-1 p-6 ml-20">
            <br />
            <br />
            <br />
            <br />
            <!-- Header -->
            <header class="flex justify-between items-center bg-white shadow-md rounded p-4 mb-6">
                <div>
                    <h1 class="text-2xl font-bold">Welcome, @Model.Name</h1>
                    <p class="text-gray-500">@DateTime.Now.ToString("ddd, dd MMMM yyyy")</p>
                </div>
                <div class="flex items-center">
                    <img src="@Url.Content("~/properties/userpicture/" + Model.UserPictureUrl)" class="w-10 h-10 rounded-full" alt="~/assets/img/upload.png" />

                </div>
            </header>
            <!-- Profile Section -->
            <section class="bg-white rounded shadow-md p-6">
                <div class="flex items-center mb-6">
                    <img src="@Url.Content("~/properties/userpicture/" + Model.UserPictureUrl)" class="w-16 h-16 rounded-full mr-4" alt="~/assets/img/upload.png" />
                    <div>
                        <h2 class="text-xl font-semibold">@Model.Name</h2>
                        <p class="text-gray-500">@Model.Email</p>
                    </div>
                    <a class ="ml-auto custom-green text-white rounded px-4 py-2" asp-controller="users" asp-action="Edit" asp-route-id="@Model.Id">Update Profile</a>

                </div>

                <!-- User Details Form -->
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-gray-600 mb-1">Full Name</label>
                        <input type="text" value="@Model.Name" class="w-full border rounded p-2">
                    </div>
                    <div>
                        <label class="block text-gray-600 mb-1">Phone Number</label>
                        <input type="text" value="@Model.PhoneNumber" class="w-full border rounded p-2">
                    </div>
                    <div>
                        <label class="block text-gray-600 mb-1">Email</label>
                        <input type="text" value="@Model.Email" class="w-full border rounded p-2">
                    </div>
                </div>

                <!-- Email Address Section -->
                <div class="mt-6">
                    <h3 class="text-gray-700 mb-2">In Box</h3>
                    <div class="flex items-center bg-gray-100 p-4 rounded">
                        <img src="https://img.icons8.com/ios-filled/50/4a90e2/new-post.png" class="w-8 h-8 mr-4" alt ="email"/>
                        <div>
                            <p class="font-semibold">@Model.Email</p>
                            <p class="text-gray-500 text-sm">1 month ago</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

</body>
</html>